{
  "extends": "./tsconfig-base-node.json",
  "include": ["src/**/*", "langs/**/*"],
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": false,
    "sourceMap": false,
    "rootDir": ".",
    "plugins": [
      {
        "transform": "ts-transform-esm-import",
        "after": true,
        "afterDeclarations": true,
        "type": "config",
        "nodeModulesDir": "./node_modules",
        "baseDir": "./dist/src"
      }
    ]
  }
}
