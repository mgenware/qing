{
  "extends": "./tsconfig-node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "plugins": [
      {
        "transform": "ts-transform-esm-import",
        "after": true,
        "afterDeclarations": true,
        "type": "config",

        "rootDir": "./src",
        "outDir": "./dist",
        "resolvers": [{ "dir": "./src", "sourceDir": true }]
      }
    ]
  }
}
