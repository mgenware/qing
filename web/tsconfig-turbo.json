{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-turbo",
    "plugins": [
      {
        "transform": "ts-transform-esm-import",
        "after": true,
        "afterDeclarations": true,
        "type": "config",

        "rootDir": "./src",
        "outDir": "./dist",
        "resolvers": [{ "dir": "./src", "sourceDir": true }]
      }
    ]
  }
}
