{
  "$schema": "http://json-schema.org/schema#",
  "title": "qing-config-schema",
  "type": "object",
  "definitions": {
    "dev_config": {
      "type": "object",
      "properties": {
        "reload_views_on_refresh": { "type": "boolean" },
        "panic_on_unexpected_html_errors": { "type": "boolean" },
        "panic_on_unexpected_json_errors": { "type": "boolean" },
        "turbo_web": {
          "type": "object",
          "properties": {
            "dir": { "type": "string" },
            "url": { "type": "string" }
          }
        },
        "mailbox": {
          "type": "object",
          "properties": {
            "url": { "type": "string" }
          }
        }
      }
    },
    "logging_config": {
      "type": "object",
      "properties": {
        "dir": { "type": "string" }
      },
      "required": ["dir"]
    },
    "site_config": {
      "type": "object",
      "properties": {
        "site_type": { "type": "number" }
      },
      "required": ["site_type"]
    },
    "http_config": {
      "type": "object",
      "properties": {
        "port": {
          "type": "number",
          "minimum": 0
        },
        "log_404_error": { "type": "boolean" },
        "static": {
          "type": "object",
          "properties": {
            "url": { "type": "string" },
            "dir": { "type": "string" }
          },
          "required": ["url", "dir"]
        }
      },
      "required": ["static"]
    },
    "templates_config": {
      "type": "object",
      "properties": {
        "dir": { "type": "string" }
      },
      "required": ["dir"]
    },
    "localization_config": {
      "type": "object",
      "properties": {
        "dir": { "type": "string" },
        "langs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "required": ["dir", "langs"]
    },
    "app_profile_config": {
      "type": "object",
      "properties": {
        "dir": { "type": "string" }
      },
      "required": ["dir"]
    },
    "db_config": {
      "type": "object",
      "properties": {
        "user": { "type": "string" },
        "pwd": { "type": "string" },
        "database": { "type": "string" },
        "host": { "type": "string" },
        "port": { "type": "number" },
        "params": { "type": "string" }
      },
      "required": ["user", "pwd", "database", "host", "port", "params"]
    },
    "res_server_config": {
      "type": "object",
      "properties": {
        "url": { "type": "string" },
        "dir": { "type": "string" }
      },
      "required": ["url", "dir"]
    },
    "extern_config": {
      "type": "object",
      "properties": {
        "redis": {
          "type": "object",
          "properties": {
            "port": {
              "type": "number",
              "minimum": 1
            },
            "logging": { "type": "boolean" }
          },
          "required": ["port"]
        },
        "img_proxy": {
          "type": "object",
          "properties": {
            "port": {
              "type": "number",
              "minimum": 1
            }
          },
          "required": ["port"]
        }
      },
      "required": ["redis", "img_proxy"]
    }
  },
  "properties": {
    "extends": { "type": "string" },
    "dev": { "$ref": "#/definitions/dev_config" },
    "logging": { "$ref": "#/definitions/logging_config" },
    "http": { "$ref": "#/definitions/http_config" },
    "templates": { "$ref": "#/definitions/templates_config" },
    "localization": { "$ref": "#/definitions/localization_config" },
    "app_profile": { "$ref": "#/definitions/app_profile_config" },
    "db": { "$ref": "#/definitions/db_config" },
    "res_server": { "$ref": "#/definitions/res_server_config" },
    "extern": { "$ref": "#/definitions/extern_config" },
    "site": { "$ref": "#/definitions/site_config" }
  },
  "required": [
    "site",
    "logging",
    "http",
    "templates",
    "localization",
    "app_profile",
    "app_settings",
    "db",
    "res_server",
    "extern"
  ]
}
