{
  "extends": "mgenware-tsconfig-node",
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./src",
    "sourceMap": false,
    "plugins": [
      {
        "transform": "ts-transform-esm-import",
        "after": true,
        "afterDeclarations": true,
        "type": "config",

        "rootDir": "./src",
        "outDir": "./dist",
        "resolvers": [{ "dir": "./src", "sourceDir": true }]
      }
    ]
  }
}
